   journal = {J. Geophys. Res},
   keywords = {bed forms,doi:10.1029/2007JF000950,http://dx.doi.org/10.1029/2007JF000950,morphodynamics,sand waves},
   pages = {4017},
   title = {Separating bathymetric data representing multiscale rhythmic bed forms: A geostatistical and spectral method compared},
