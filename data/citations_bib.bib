   pages = {520-539},
   publisher = {John Wiley & Sons, Ltd},
   title = {Quantifying the role of urbanization on airflow perturbations and dunefield evolution},
   volume = {5},
   url = {https://onlinelibrary.wiley.com/doi/full/10.1002/2016EF000524 https://onlinelibrary.wiley.com/doi/abs/10.1002/2016EF000524 https://agupubs.onlinelibrary.wiley.com/doi/10.1002/2016EF000524},
